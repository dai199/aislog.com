<div class="col-md-12">
  <h2 class="py-3">ライブ</h2>
  <p><%= @setlist.title %></p>
</div>

<div class="col-md-12">
  <ul>
    <% @setlist.setlist_details.each do |sd| %>
      <li>
        <div class="title">
          <% if sd.music_order.present? %>
            <%= format("%02d", sd.music_order) %> 
          <% end %>
          <%= sd.title %>
        </div>
        <% if sd.description.present? %>
          <div class="description">
            <%= sd.description %>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>